<%= bootstrap_form_for @member, remote: true do |f| %>
  <% if @member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
      <% @member.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <%= f.text_field :name %>
    <%= f.check_box :category, label: 'Adult (non-YSA)?' %>
    <%= f.radio_button :gender, 'Male', label: 'Male' %>
    <%= f.radio_button :gender, 'Female', label: 'Female' %>
    <%= label :attendance, :dinner do %>
      <%= check_box :attendance, :dinner %> Dinner
    <% end %>
    <%= label :attendance, :lesson do %>
      <%= check_box :attendance, :lesson %> Lesson
    <% end %>
    <%= label :attendance, :activity do %>
      <%= check_box :attendance, :activity %> Activity
    <% end %>
    <%= f.primary "Sign in" %>
<% end %>
<script type="text/javascript">
  $('#member_name').typeahead({ source: <%= @members.map(&:name).to_s.html_safe %> });
</script>
